
<%# <p>Find me in app/views/restaurants/show.html.erb</p> %>
<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.category %></h2>
<p class="btn btn-success btn-lg"> <%= link_to "<button>Back to Restaurants</button>".html_safe, '/restaurants' %> </p>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

<p class="btn btn-info btn-lg"> <%= link_to "<button>Post a</button>".html_safe, '/restaurants' %> </p>
